.ph7-l.sans-serif.mw9-l
	.new-comment-panel
		= form_for([@post, @post.comments.build], local: true, remote: true) do |f|
			.mb4
				= f.text_area :body, placeholder: "Write a comment...", rows: 4, class: "w-100"
			.tc
				= f.submit "Post comment", class: "f6 f5-ns fw6 dib ba b--black-20 bg-blue white ph3 ph4-ns pv2 pv3-ns br2 grow no-underline"
