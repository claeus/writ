- if user_signed_in?
	= link_to "Sign Out", destroy_user_session_path, method: :delete, class: "btn btn-danger"
	= link_to "New Post", new_user_registration_path, class: "btn btn-danger"
	%span
		Welcome 
		= link_to current_user.username, profile_path
- else

	= link_to "Sign Up", new_user_registration_path, class: "btn btn-danger"
	= link_to "Sign In", new_user_session_path, class: "btn btn-danger"


	